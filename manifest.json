{
  "name": "SA Zulu Language Translator",
  "version": "1.0.0",
  "description": "Chrome extension used to translate selected text on a webpage from english to Zulu",
  "manifest_version": 3,
  "permissions": ["scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
