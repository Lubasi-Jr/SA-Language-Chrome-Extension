{
  "name": "SA Zulu Language Translator",
  "version": "1.0.0",
  "description": "Chrome extension used to translate selected text on a webpage from English to Zulu",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "resources": ["sa-flag-cursor.png", "text-hover.png"]
    }
  ]
}
