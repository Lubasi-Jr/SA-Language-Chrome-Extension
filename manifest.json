{
  "name": "SA Zulu Language Translator",
  "version": "1.0.0",
  "description": "Chrome extension used to translate selected text on a webpage from English to Zulu",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Translate selected text"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
